<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row"></div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>


      <div class="mb-3">
        <%= form.label :subtitle, class: "form-label" %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>

      
      <div class="mb-3">
        <%= form.label :author, class: "form-label" %>
        <%= form.text_field :author, class: "form-control" %>
      </div>


      <div class="mb-3">
         <%= form.label :category_id, "Category", class: "form-label" %>
         <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a Category" }, { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= form.label :published_date, class: "form-label" %>
        <%= form.date_field :published_date, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :isbn, class: "form-label" %>
        <%= form.text_field :isbn, class: "form-control" %>
      </div>

       <div class="mb-3">
        <%= form.label :cover, class: "form-label" %>
        <%= form.file_field :cover, class: "form-control" %>
      </div>


      <div class="mb-3">
        <%= form.label :summary, class: "form-label" %>
        <%= form.text_area :summary, class: "form-control", rows: 4 %>
      </div>

      <div class="mt-3">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
