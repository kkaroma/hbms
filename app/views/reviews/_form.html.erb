<div class="container d-flex justify-content-center mt-5">
  <div class="card p-4 shadow-sm" style="max-width: 900px; width: 100%;">
    
    <%= form_with(model: [@book, @review]) do |form| %>

      <% if @review.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h4>
          <ul>
            <% @review.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h2 class="mb-4 text-center">Write a Review for: <%= @book.title %> </h2>

      <div class="mb-3">
        <%= form.label :title, class: "form-label fw-bold" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter review title", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :content, class: "form-label fw-bold" %>
        <%= form.text_area :content, class: "form-control", rows: 6, placeholder: "Write your review here...", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :rating, class: "form-label fw-bold" %>
        <%= form.number_field :rating, class: "form-control", min: 1, max: 5, placeholder: "Rate from 1 to 5", required: true %>
      </div>

      <div class="d-flex justify-content-between">
        <%= form.submit "Submit Review", class: "btn btn-primary px-4" %>
        <%= link_to "Cancel", book_path(@book), class: "btn btn-secondary px-4" %>
      </div>

    <% end %>

  </div>
</div>
