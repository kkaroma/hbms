
  <%= form_with(model: @category, local: true) do |form| %>
    <div class="mb-3">
      <div class="row">
        <div class="col-md-6">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
      </div>
    </div>

    <%= form.submit class: 'btn btn-success' %>
  <% end %>

