<p style="color: green"><%= notice %></p>

<% content_for :title, "Books" %>
<% if user_signed_in? %>
  <%= link_to "Add a Book", new_book_path, class: "btn btn-success" if user_signed_in? %>
<% end %>

<h1 class="display-1">Books</h1>

  <div id="books">
      <div class="row">
      <% @books.each do |book| %>
      <div class="col-md-2 col-sm-3">
          <% if book.cover.attached? %>
                <%= image_tag book.cover, class: "img-thumbnail", alt: book.title %>
          <% else %>
              <p>No cover image uploaded</p>
          <% end %>
      </div>
      <div class="col-md-4 col-sm-3">
              <h3 class="text-primary"><%= link_to book.title, book %></h3>
  

    <p class="text-muted"><strong><%= book.subtitle %></strong></p>


  <p>
    <strong>Isbn:</strong>
     <%= book.isbn %>

  <p>
    <strong>Author:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= book.category.name %>
  </p>

  <p>
    <strong>Published date:</strong>
    <%= book.published_date %>
   
  </p>

  


          

          <p>
          <%= link_to "Show this book", book %>
          
          </p> 
          <hr />
      </div>
      
      <% end %>
      </div>
      

  </div>

<% if user_signed_in? %>
  <%= link_to "Add a Book", new_book_path, class: "btn btn-success" %>
<% end %>
